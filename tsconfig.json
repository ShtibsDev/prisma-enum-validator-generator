{
	"compilerOptions": {
		"target": "ES2022",
		"module": "commonjs",
		"rootDir": "src",
		"outDir": "dist",
		"declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"exclude": ["./prisma/*", "node_modules", "dist"]
}
